<!--index.wxml-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <input class="weui-input" auto-focus placeholder="请输入你的问题" bindinput="getInput"/>
  </view>
</view>
<button style="margin-top:10rpx" type="primary" bindtap="sendRequest">发送</button>
<mp-cells title="新消息提示跟摘要信息后，统一在列表右侧">
  <mp-cell title="响应内容">
      <view slot="footer">
          <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{response}}</view>
      </view>
  </mp-cell>
</mp-cells>
